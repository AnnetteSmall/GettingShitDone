
  {{> _weightNav}}


<div class="form ">
  <form class="form--add" action="/weight" method="post">
    <div class="form--row error">
      {{#each errors}}
      <div class="error--box">
        <div class="error--box-msg">
          <p>{{text}}</p>
        </div>
      </div>
      {{else}}
      {{/each}}
    </div>
    <div class="form--row">
      <input type="number" class="form--input" name="weight" placeholder="Weight in KG" required>
    </div>
    <div class="form--row">
      <input type="datetime-local"  name="date" class="form--input" required>
    </div>
    <div class="form--row u-centre">
      <button  class="btn btn-submit" type='submit' id="saveMeasurmentButton">Save</button>
    </div>
  </form>
</div>
